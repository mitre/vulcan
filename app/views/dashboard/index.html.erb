<% if current_user %>
  <% if current_user.has_role? :admin %>
    <div class="row">
        <div class="col-lg-12">
          <div class="card-box">
            <h4 class="m-t-0 header-title">Users Needing Roles</h4>
            <table id="requests-datatable" class="table table-striped table-bordered toggle-circle m-b-0" data-page-size="5">
              <thead>
                <tr>
                  <th>Email</th>
                  <th>Set Organization</th>
                  <th>Submit</th>
                </tr>
              </thead>
              <tbody>
                <% User.all.each do |user| %>
                  <% if !user.has_role?(:vendor) && !user.has_role?(:sponsor) && !user.has_role?(:admin) %>
                    <tr value='<%= user.id %>'>
                      <%= form_tag(set_role_url, method: "post", id: 'set_role_org', remote: true) do %>
                        <%= hidden_field_tag 'user_id', user.id, id: 'user_id' %>
                        <td><%= user.email%></td>
                        <td>
                          <%= select_tag('org', grouped_options_for_select(get_grouped_orgs), {class: 'form-control select2', id: 'org', include_blank: 'Select Organization'})%>
                        </td>
                        <td>
                            <%= submit_tag 'Submit', class: 'btn btn-success' %>
                        </td>
                      <% end %>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
              <tfoot>
                <tr class="active">
                    <td colspan="5">
                        <div class="text-right">
                            <ul class="pagination pagination-split justify-content-end footable-pagination m-t-10 m-b-0"></ul>
                        </div>
                    </td>
                </tr>
              </tfoot>
            </table>
          </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <%= render 'components/vendor_form', vendor: Vendor.new %>
      </div>
      <div class="col-lg-6">
        <%= render 'components/sponsor_form', sponsor_agency: SponsorAgency.new %>
      </div>
    </div>
  <% end %>
<% end %>

