<div class="row">
    <div class="col-lg-12">
      <div class="card-box">
        <h4 class="m-t-0 header-title">Uploaded SRGs</h4>
        <p class="text-muted m-b-30 font-13">
            include filtering in your FooTable.
        </p>
        <table id="srg-filtering" class="table table-striped table-bordered toggle-circle m-b-0" data-page-size="7">
            <thead>
              <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Publisher</th>
                <th>Published</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <div class="form-inline m-b-20">
                <div class="row">
                    <div class="col-md-6 text-center text-right">
                        <input id="srg-search" type="text" placeholder="Search" class="form-control" autocomplete="on">
                    </div>
                </div>
            </div>
            <tbody>
              <% @srgs.each do |srg| %>
                <tr>
                  <td><%= srg.title %></td>
                  <td><%= srg.description %></td>
                  <td><%= srg.publisher %></td>
                  <td><%= srg.published %></td>
                  <td><%= link_to 'Show Controls', srg %></td>
                  <td><%= link_to 'Destroy', srg, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
            <tfoot>
              <tr class="active">
                  <td colspan="5">
                      <div class="text-right">
                          <ul class="pagination pagination-split justify-content-end footable-pagination m-t-10 m-b-0"></ul>
                      </div>
                  </td>
              </tr>
            </tfoot>
          </table>
      </div>
    </div>
</div>