<div class="row">
    <div class="col-lg-12">
      <div class="card-box">
        <h4 class="m-t-0 header-title"><%= @srg.title %> Controls</h4>
        <table id="srg-controls-datatable" class="table table-striped table-bordered toggle-circle m-b-0" data-page-size="7">
            <thead>
              <tr>
                <th>SRG ID</th>
                <th>Severity</th>
                <th>Title</th>
                <th>Nist Families</th>
                <th></th>
              </tr>
            </thead>
            <div class="form-inline m-b-20">
                <div class="row">
                    <div class="col-md-6 text-center text-right">
                        <input id="srg-controls-search" type="text" placeholder="Search" class="form-control" autocomplete="on">
                    </div>
                </div>
            </div>
            <tbody>
              <tbody>
                <% @srg.srg_controls.each do |srg_control| %>
                  <tr>
                    <td><%= srg_control.srg_title_id %></td>
                    <td><%= srg_control.severity %></td>
                    <td><%= srg_control.title %></td>
                    <td><%= srg_control.nist_controls.collect {|nist| nist.family + '-' + nist.index } %></td>
                    <td><%= link_to 'Show', srg_control %></td>
                  </tr>
                <% end %>
              </tbody>
            </tbody>
            <tfoot>
              <tr class="active">
                  <td colspan="5">
                      <div class="text-right">
                          <ul class="pagination pagination-split justify-content-end footable-pagination m-t-10 m-b-0"></ul>
                      </div>
                  </td>
              </tr>
            </tfoot>
        </table>
        <%= link_to 'Back', srgs_path %>
        <br>
        <%= link_to 'New Srg Control', new_srg_control_path %>
      </div>
    </div>
</div>
