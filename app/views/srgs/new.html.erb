<div id="wrapper">
  <div class="container-fluid">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Upload SRG</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
          <div class="panel panel-default">
              <div class="panel-heading">
                  Upload SRG
              </div>
              <div class="panel-body">
                <%= form_tag(upload_srg_path, multipart: true, :html => {class: 'form-control'}) do %>
                  <div class="input-group">
                    <%= file_field_tag :file, :class => "menu-text" %>
                  </div>
                  <br>
                  <div class="actions">
                    <%= submit_tag 'Upload', :class => "btn btn-primary" %>
                  </div>
                <% end %>
              </div>
          </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
  </div>
</div>
<!-- /#wrapper -->